apiVersion: v1
kind: Namespace
metadata:
  name: ffmpeg
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ffmpeg-rtsp-deployment
  namespace: ffmpeg   # Specify the namespace here
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ffmpeg-rtsp
  template:
    metadata:
      labels:
        app: ffmpeg-rtsp
    spec:
      containers:
      - name: ffmpeg-rtsp
        image: docker.io/vladrac/ffmpeg_rtsp:latest   # Replace with your Docker Hub image
        ports:
        - containerPort: 8554   # Expose the RTSP port
        env:
        - name: VIDEO_URL
          value: "https://ent.box.com/shared/static/pnsp2zeix9tsvgi0u663i8kmmdypkx63.mp4"  # Replace with the URL of your video source
        - name: RTSP_PORT
          value: "8554"
        # Optional resource limits
        resources:
          limits:
            memory: "512Mi"
            cpu: "500m"
          requests:
            memory: "256Mi"
            cpu: "250m"
---
apiVersion: v1
kind: Service
metadata:
  name: ffmpeg-rtsp-service
  namespace: ffmpeg   
spec:
  type: NodePort   
  ports:
    - port: 8554
      nodePort: 30554
      protocol: TCP
      name: rtsp
  selector:
    app: ffmpeg-rtsp
